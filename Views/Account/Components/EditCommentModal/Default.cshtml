@model ProfileComment
<div class="modal fade" id="EditCommentModal@(Model.Id)" tabindex="-1" aria-labelledby="EditCommentModal@(Model.Id)Label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="EditComment" asp-controller="Account" method="post" enctype="multipart/form-data">

                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="EditCommentModal@(Model.Id)Label">Edit Comment</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @Html.TextAreaFor(m => m.Text, htmlAttributes: new { @placeholder = "Write your comment...", @class = "form-control" })
                    <input type="hidden" asp-for="@Model.ProfileId" value="@Model.ProfileId" />
                    <input type="hidden" asp-for="@Model.AuthorId" value="@Model.AuthorId" />
                    <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
                </div>
                <div class="d-flex gap-3">
                    <div class="p-3">
                        <label for="fileInput@(Model.Id)" class="btn btn-primary">
                            <i class="bi bi-image" id="icon"></i>
                        </label>
                        <input id="fileInput@(Model.Id)" type="file" name="fileInput2" formenctype="multipart/form-data" style="display:none">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Confirm</button>
                </div>
            </form>

        </div>
    </div>
</div>

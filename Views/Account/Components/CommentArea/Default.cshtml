@model ProfileComment
<form asp-action="PostComment" asp-controller="Account" method="post" enctype="multipart/form-data">
    <div class="ProfileTextarea @(ViewBag.area == "reply" ? "" : "pb-5")">
        <div>
            @Html.TextAreaFor(m => m.Text, htmlAttributes: new { @placeholder = "Write your comment...", @class = "form-control" })
            <input type="hidden" asp-for="@Model.ProfileId" value="@Model.ProfileId" />
            <input type="hidden" asp-for="@Model.AuthorId" value="@Model.AuthorId" />

        </div>
        <div class="d-flex @(ViewBag.area == "reply" ? "justify-content-end" : "justify-content-between") align-items-center gap-3 pt-3">
            @if (ViewBag.area == "reply")
            {

            }
            else
            {

                <div>
                    <p class="d-flex align-items-center h-100">
                        Image Preview: <img id="imagePreview" src="" class="FitImage ToggleDisplay" style="max-width: 64px;" /> <span id="textPreviewer"></span>
                    </p>
                </div>
            }

            <div>
                @if (ViewBag.area == "reply")
                {

                }
                else
                {
                    <label for="fileInput" class="btn btn-primary">
                        <i class="bi bi-image" id="icon"></i>
                    </label>
                    <input id="fileInput" type="file" name="fileInput" formenctype="multipart/form-data">

                }

                <button class="btn btn-primary" type="submit">Post</button>

            </div>

        </div>
    </div>
</form>